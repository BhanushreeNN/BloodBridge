<%- include("partials/header.ejs") %>

<div class="formReg">
    
<section class="container">
    <h1>REQUEST FOR BLOOD</h1>
    <form action="/regrequest" method="post" class="form" >
        <div class="column">
        <div class="input-box"> 
            <label>First Name</label>
            <input type="text" placeholder="Enter First Name" name="fname" required>
        </div>
        <div class="input-box">
            <label>Last Name</label>
            <input type="text" placeholder="Enter Last Name" name="lname" required>
        </div>
    </div>
    <div>
        <label>Date of Birth</label>
        <input type="date" name="dob"  class="select-box" required>
    </div>
        
        <div>
            <label >Gender</label>
            <select name="gender" id="" class="select-box" required>
                <option hidden>Select</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
        
        <div>
            <label>Blood Group</label>
            <select name="bloodgrp" class="select-box" id="" required>
            <option hidden>Select</option>
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
        </select>
        </div>
    
    
    <div class="column">
        <div class="input-box">
            <label>Email</label>
            <input type="email" placeholder="Enter Email" name="email" required>
        </div>
        <div class="input-box">
            <label>Mobile Number</label>
            <input type="text" placeholder="Enter Mobile Number" name="mobile" required>
        </div>
    </div>
    <div class="input-box">
        <label>Units</label>
        <input type="number" placeholder="Enter Units Required" name="units" required>
    </div>
    <div class="input-box">
        <label>Reason</label>
        <input type="text" placeholder="Enter Reason of Request" name="reason" required>
    </div>
    <div class="column">
        <div class="input-box">
            <label>State</label>
            <input type="text" placeholder="Enter your State Name" name="state" required>
        </div>
        <div class="input-box">
            <label>District</label>
            <input type="text" placeholder="Enter your District Name" name="district" required>
        </div>
    </div>
        <div class="input-box">
            <label>Address</label>
            <input type="text" placeholder="Address" name="address" required>
        </div>
      
        <div>
            <button class="button">SUBMIT</button>
        </div>
    </form>
    
</section>
</div>